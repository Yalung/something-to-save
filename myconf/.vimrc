filetype on
set nocp
filetype plugin on 

set tabstop=4
set autoindent
set smartindent
" configure tabwidth and insert spaces instead of tabs
set tabstop=4        " tab width is 4 spaces
set shiftwidth=4     " indent also with 4 spaces
autocmd FileType c,cpp,h,py set expandtab " expand tabs to spaces
set enc=utf-8
set fenc=utf-8
set termencoding=utf-8
set nocompatible
syntax on
set number
set showmatch
set paste

